            !Sub "${pSnsAppStack}-alert-rSev5SnsTopicArn"
      OKActions:
        - Fn::ImportValue:
            !Sub "${pSnsAppStack}-alert-rSev5SnsTopicArn"
      Dimensions:
        - Name: DBClusterIdentifier
          Value: !Ref pRDSName
      ComparisonOperator: GreaterThanThreshold

  RDSQueryRateOverThreshold:
    Type: 'AWS::CloudWatch::Alarm'
    Properties:
      AlarmName: !Join
        - " | "
        - - !Ref pAppName
          - RDS-Query-Rate-threshold-alarm
