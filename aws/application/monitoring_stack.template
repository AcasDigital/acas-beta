      ComparisonOperator: GreaterThanThreshold

  RDSReplicationOverThreshold:
    Type: 'AWS::CloudWatch::Alarm'
    Properties:
      AlarmName: !Join
        - " | "
        - - !Ref pAppName
          - RDS-Replica-Lag-threshold-alarm
      AlarmDescription: >-
